<h1>Listing followers</h1>
<%= link_to 'Following', get_following_followers_path %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Follower</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followers.each do |follower| %>
      <tr>
        <td><%= follower.user_id %></td>
        <td><%= follower.follower_id %></td>
        <td><%= link_to 'Show', follower %></td>
        <td><%#= link_to 'Edit', edit_follower_path(follower) %></td>
        <td><%= link_to 'Destroy', follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

