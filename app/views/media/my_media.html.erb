<h1>Listing Current User's media</h1>
<%= link_to 'Back', media_path %> |
<%= link_to 'New Medium', new_medium_path %>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Caption</th>
      <th>Is private</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= image_tag medium.picture_url(:thumb) %></td>
        <td><%= medium.caption %></td>
        <td><%= medium.is_private %></td>
        <td><%= medium.user_id %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
