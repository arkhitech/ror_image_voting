<h1>Listing All groups</h1>

<%= link_to 'My groups', my_group_user_groups_path  %>

<table>
  <thead>
    <tr>
      <th>Group name</th>
      <th>Group Owner user_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
        <td><%= user_group.group_name %></td>
        <td><%= user_group.user_id %></td>
        <td><%= link_to 'Show', user_group %></td>
        <td><%= link_to 'Join Group', new_user_group_member_path(user_group) %>
        <td><%#= link_to 'Edit', edit_user_group_path(user_group) %></td>
        <td><%#= link_to 'Destroy', user_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

