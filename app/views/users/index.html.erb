<h1>Listing All Users</h1>
<table>
  <thead>
    <tr>
      <th>User id</th>
      <th>User name</th>
      <th>Profile Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= image_tag user.profile_picture_url(:thumb) %>
        <td><%= link_to "Follow", follow_users_path(id: user.id) %> </td>
        <td><%= link_to "Unfollow", unfollow_users_path(id: user.id) %> </td>
        <%#= link_to 'Show', user %>
      </tr>
    <% end %>
  </tbody>
</table>

